<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="SMS Notification">

        <EditTextPreference
            app:key="signature"
            app:title="@string/signature_title"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            app:key="contactOne"
            app:title="First phone number"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            app:key="contactTwo"
            app:title="Second phone number"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            app:key="contactThree"
            app:title="Third phone number"
            app:useSimpleSummaryProvider="true" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="sendGpsData"
            android:title="Send GPS location" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Sound Notification">

    </PreferenceCategory>

</androidx.preference.PreferenceScreen>
